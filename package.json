{
  "name": "wdio-electron-service-example",
  "version": "1.0.0",
  "main": "./dist/main.js",
  "scripts": {
    "build": "pnpm clean:dist && webpack && cross-env cp ./src/index.html ./dist && electron-builder -p never",
    "ci": "pnpm build && pnpm test && pnpm lint",
    "clean": "pnpm clean:dist && cross-env rm -rf ./node_modules ./all-logs",
    "clean:dist": "cross-env rm -rf ./dist && cross-env mkdir -p ./dist",
    "format": "prettier --write \"**/*.{j,t}s\"",
    "lint": "eslint \"**/*.{j,t}s\"",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "test": "pnpx wdio wdio.conf.js"
  },
  "devDependencies": {
    "electron": "^13.6.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@wdio/cli": "^7.16.12",
    "@wdio/local-runner": "^7.16.12",
    "@wdio/mocha-framework": "^7.16.11",
    "global-jsdom": "^8.4.0",
    "husky": "^7.0.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "chromedriver": "^90.0.0",
    "electron-chromedriver": "^11.0.0",
    "wdio-chromedriver-service": "^7.1.0",
    "wdio-electron-service": "^2.0.0"
  },
  "engines": {
    "node": "12.0.0"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix"
    ],
    "**/*.{yml,json,md,ts,js}": [
      "prettier --write"
    ]
  },
  "build": {
    "asar": true,
    "appId": "com.wdio-electron-service-example.demo",
    "copyright": "goosewobbler",
    "productName": "wdio-electron-service-example",
    "files": [
      "./dist/*"
    ],
    "linux": {
      "executableName": "wdio-electron-service-example",
      "category": "Utility",
      "target": [
        "AppImage"
      ]
    }
  }
}
